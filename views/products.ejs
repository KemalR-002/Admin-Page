<h2>Daftar Produk</h2>

<table border="1">
  <tr>
    <th>Nama</th>
    <th>Harga</th>
    <th>Stok</th>
    <th>Aksi</th>
  </tr>

  <% products.forEach(p => { %>
    <tr>
      <td><%= p.name %></td>
      <td>Rp <%= p.price %></td>
      <td><%= p.quantity %></td>
      <td>
        <a href="/admin/purchase/add?product_id=<%= p.id %>">
          <button>Beli</button>
        </a>
      </td>
    </tr>
  <% }) %>
</table>

<br>
